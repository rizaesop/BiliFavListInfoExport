<!-- views/getData.ejs -->

<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>收藏夹一览</title>
  <style>
    .div {
    font-family: 'SimSong';
    }

    .video-item {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 20px;
    font-family: 'SimSong';
    }

    .cover {
    width: 300px;
    margin-right: 20px;
    margin-bottom: 10px;
    }

    .info {
    flex: 1;
    font-family: 'SimSong';
    margin-left: 80px;
    margin-right: 250px;
    }

    h3 {
    width: 100%;
    text-align: center;
    }

    @media (min-width: 600px) {
    /* 在大于等于 600px 的屏幕上应用以下样式 */
    .cover {
        margin-left: 300px; /* 从页面左边 100px 处开始 */
    }
    }
  </style>
  <meta name="referrer" content="same-origin"/>
</head>

<body>
  <h1>收藏夹视频信息一览:</h1>
  <div>
    <% allVideos.forEach(media => { %>
        <h3><%= media.title %></h2>
        <div class="video-item">
            <img class="cover" src="<%= media.cover %>" alt="cover">
            <div class="info">
                <strong>简介:</strong> <%= media.intro %><br>
                <strong>BV:</strong> <%= media.bv_id %><br>
                <strong>链接:</strong> <a href="<%= media.link %>" target="_blank">前往观看</a>
            </div>
      </div>
    <% }); %>
  </div>
  <meta name="referrer" content="same-origin"/>
</body>
</html>
